<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- Don't forget to copy your JDBC driver to the lib/ directory! -->

		<!-- Settings for a local HSQL (testing) database.
		-->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.ReplicationDriver</property>
		<property name="connection.url">
			jdbc:mysql://10.4.6.221,10.4.6.228,10.4.6.229/test?useUnicode=true&amp;autoReconnect=true&amp;failOverReadOnly=false&amp;roundRobinLoadBalance=true&amp;characterEncoding=ms932
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>

		<!-- transaction api -->
		<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>

		<!-- Bind the getCurrentSession() method to the thread, session-per-conversation -->
		<property name="current_session_context_class">thread</property>
		<property name="transaction.auto_close_session">true</property>


		<!-- use c3p0 pool as connection pool -->
		<!-- <property name="hibernate.c3p0.max_size">5</property> -->
		<property name="hibernate.c3p0.max_size">5</property>
		<property name="hibernate.c3p0.min_size">0</property>
		<property name="hibernate.c3p0.timeout">1</property>
		<property name="hibernate.c3p0.max_statements">200</property>
		<property name="hibernate.c3p0.idle_test_period">1000</property>
		<property name="hibernate.c3p0.acquire_increment">2</property>
		<property name="hibernate.c3p0.validate">false</property>

		<!-- set the JDBC fetch size -->
		<property name="hibernate.jdbc.fetch_size">25</property>
		<!-- set the maximum JDBC 2 batch size (a nonzero value enables batching) -->
		<property name="hibernate.jdbc.batch_size">25</property>

		<!-- set ehcache for sessionFactory query cache -->
		<property name="hibernate.cache.provider_configuration_file_resource_path">ehcacheMain.xml</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>


		<!-- Print SQL to stdout. -->
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>

		<!--mappings -->
		<mapping resource="test/hibernate/tables/mysql/repl/ZyfTest.hbm.xml" />

	</session-factory>
</hibernate-configuration>