<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<!-- ConsoleAppender -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="Threshold" value="debug" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p] [%t %c{1}] %m%n" />
		</layout>
	</appender>

	<!-- DailyRollingFileAppender -->
	<appender name="infoLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="info.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="info" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.SSS} %p %t [%c] %m%n" />
		</layout>
	</appender>

	<!-- RollingFileAppender -->
	<appender name="debugLog" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="File" value="debug.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="debug" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.SSS} %p %t [%c] %m%n" />
		</layout>
	</appender>

	<!-- Root Info Log Appender-->
	<appender name="rootInfo" class="org.apache.log4j.FileAppender">
		<param name="File" value="info.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="info" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.SSS} %p %t [%c] %m%n" />
		</layout>
	</appender>

	<!-- Core Info Log Appender-->
	<appender name="coreInfo" class="org.apache.log4j.FileAppender">
		<param name="File" value="core.log" />
		<param name="Append" value="true" />
		<param name="Threshold" value="debug" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.SSS} %p %t [%c] %m%n" />
		</layout>
	</appender>
	
	<!-- Core Info Log Category-->
	<category name="fx.cluster.core">
		<level value="debug" />
		<appender-ref ref="coreInfo" />
	</category>

	<!-- root -->
	<root>
		<level value="info" />

		<appender-ref ref="console" />
		<appender-ref ref="rootInfo" />
	</root>

</log4j:configuration>
