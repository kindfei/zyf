<tc:tc-config xmlns:tc="http://www.terracotta.org/config"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-4.xsd">

  <application>
    <dso>  
      <instrumented-classes>
          <include>
            <class-expression>test.terracota.demo.singleresource.Main</class-expression>
            <honor-transient>true</honor-transient>
          </include>
      </instrumented-classes>
      <locks>
          <autolock>
              <method-expression>void test.terracota.demo.singleresource.Main.run()</method-expression>
          </autolock>
      </locks>
      <roots>
        <root>
          <field-name>test.terracota.demo.singleresource.Main.instance</field-name>
        </root>
      </roots>
    </dso>
  </application>
</tc:tc-config>
